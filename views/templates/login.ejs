<%- include("header") %>
<style>
  @import url("https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css");



  .login-box {
    display: flex;
    justify-content: center;
    top: 20%;
    position: sticky;
    animation: box-login 2s;
  }

  @keyframes box-login {
    0% {
      transform: rotateY(100deg);
    }

    50%,
    100% {
      transform: rotateY(0deg);
    }
  }

  .login {
    display: flex;
    flex-direction: column;
    width: 420px;
    padding: 20px;
    background-color: #e0455f;
    background-image: linear-gradient(147deg, #eee7e8 0%, #e2d7d9 74%);

    border-radius: 15px;
    box-shadow: 0 0 3px #0b012185, 0 0 5px #0b012185, 0 0 15px #0b012185, 0 0 40px #0b012185;
  }

  .login h1 {
    text-align: center;
    font-size: 26px;
    padding: 20px;
    color: white;
  }

  .login input {
    display: inherit;
    flex-direction: inherit;
    padding: 10px;
  }

  .login-input-icon {
    position: relative;
    align-self: flex-end;
    top: -38px;
    right: 15px;
    color: #633fb3;
    display: block;
  }

  ::placeholder {
    color: rgb(136, 136, 136);
  }

  .login input[type="email"],
  input[type="password"] {
    margin-bottom: 1em;
    background: rgba(255, 255, 255, 0);
    border-bottom-style: solid;
    border-bottom-width: thin;
    border-bottom-color: #485461;
    border-radius: 15px;
    color: #fff;
    height:45px;
    animation: login-input-focus-initial 1s normal forwards;
    padding-right: 30px;
    
    background-color: #e0455f;
  }

  .login input[type="email"]:focus,
  input[type="password"]:focus {
    animation: login-input-focus 1s normal forwards;
  }

  .login-remember {
    display: flex;
    margin-bottom: 1em;
    align-items: center;
  }

  .login-remember-text {
    align-self: flex-start;
    font-family: serif;

  }

  .login-checkbox {
    color: rgb(136, 136, 136);
    width: 15px;
    height: 15px;
    display: inherit;
  }

  .login-checkbox input {
    cursor: pointer;
    display: none;
  }

  .checkmark {
    height: 15px;
    width: 15px;
    background: #fff;
    cursor: pointer;
    border-radius: 5px;
  }

  .login input:checked~.checkmark {
    background-color: #633fb3;
  }

  .checkmark:after {
    content: "";
    display: none;
  }

  .login-checkbox input:checked~.checkmark:after {
    display: block;
  }

  .login .checkmark:after {
    left: 5px;
    top: 2px;
    width: 3px;
    height: 5px;
    border: solid white;
    border-width: 0 3px 3px 0;
    transform: rotate(45deg);
    position: relative;
  }
  .center{
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .login button {
    cursor: pointer;
    padding: 10px;
    width:120px;
    border-radius: 15px;
    font-weight: 700;
    
    color: #fff;
    background-color: #bf4f51;
    /* background-color: #990000;
background-image: linear-gradient(147deg, #990000 0%, #ff0000 74%); */


    animation: login-button 1s normal forwards;
  }

  .login button:hover {

    animation: login-button-hover 1s normal forwards;
  }

  .login-social-media {
    display: inherit;
    justify-content: center;
    margin-top: 15px;
  }

  .login-social-media img {
    padding: 0 5px;
    cursor: pointer;
  }






  .login-separator {
    width: 70%;
    margin: auto;
    height: 2px;
    background: #fff;
    margin-top: 25px;
  }

  @keyframes login-input-focus-initial {
    0% {
      font-size: 12px;
    }

    50%,
    100% {
      font-size: 14px;
    }
  }

  @keyframes login-input-focus {
    0% {
      font-size: 14px;
    }

    50%,
    100% {
      font-size: 12px;
    }
  }

  @keyframes login-button {
    0% {
      background-size: 200%;
    }

    50%,
    100% {
      background-size: 100%;
    }
  }

  ::placeholder {
    /* Chrome, Firefox, Opera, Safari 10.1+ */
    color: white;
    opacity: 1;
    /* Firefox */
  }

  @keyframes login-button-hover {
    0% {
      background-size: 100%;
    }

    50%,
    100% {
      background-size: 200%;
    }
  }
</style>


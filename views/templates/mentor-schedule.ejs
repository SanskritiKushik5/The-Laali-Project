    <div class="row" style="padding-bottom:40px; ">
        <div class="col-sm-3"></div>
      <div class="col-md-6" style="margin:2rem;">
        <class class="card" style="padding-bottom:40px;background-color: rgba(255, 255, 255, 0.8); ">
            <div class="card-header " style="background:linear-gradient(60deg, #68345c, #5e0443);color: white;">Schedule the meet.</div>
          <div class="card-body">
            <form action="/mentor/schedule" enctype="multipart/form-data" method="POST">

              <div class="row ">
                <label for="title">Name of Event</label>
                <input type="text" id="title" name="title"
                  style="width:90%;height:40px;padding-left:20px;margin-left:20px;">
              </div>
              <div class="row ">
                <label for="Meetingtime">Date and time of Event</label>
                <input type="datetime-local" id="Meetingtime" name="date" 
                style="width:90%;height:40px;padding-left:20px;margin-left:20px;"">
              </div>
              <div class="row ">
                <label for="details">Any details to be noted</label>
                <input type="text" id="details" name="details"
                  style="width:90%;height:40px;padding-left:20px;margin-left:20px;color:black;"
                  placeholder="Details/Notes" required>
              </div>
              <div class="text-center">
                <button type="submit" id="submit"
                  class="btn" style="background:linear-gradient(60deg, #68345c, #5e0443); margin-top:50px;color: white;" >SCHEDULE</button>
              </div>
            </form>
          </div>
        </class>


      </div>

<%- include("header") %>
<style>
    input {
        outline: none;
        margin: 0;
        border: none;
        -webkit-box-shadow: none;
        -moz-box-shadow: none;
        box-shadow: none;
        width: 100%;
        font-size: 14px;
        font-family: inherit;
    }

    body {
        font-family: 'Recursive', sans-serif;
        font-size: larger;
    }

    .customborder {
        border-radius: 2%;
        border: 2px solid #E95420;
    }

    .card {
        background: #212529;
        border-radius: 10px;
        margin-top: 50px;
        padding-top: 10px;
        text-align: centre;
        padding-bottom: 20px;
        box-shadow: 0 10px 10px 0 rgba(0, 0, 0, 0.2), 0 40px 20px 0px rgba(0, 0, 0, 0.19);
        width: 75%;
        margin-left: 10%;
    }

    .card-header {
        font-weight: bold;
        color: white;
        font-size: 50px;
    }

    .btn {
        width: 100%;
        align-items: center;
        background: #212529;
        border: none;

    }

    .card-text {
        text-color: #fff;
        text-align: center;
    }

    .card-title {
        color: white;
        font-weight: bold;
        text-align: center;
        padding-bottom: 10px;
    }

    .card-body {
        color: white;
        padding: 25px;
    }

    .card:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 20px rgba(0, 0, 0, .12), 0 4px 8px rgba(0, 0, 0, .06);
    }

    .column {
        float: left;
        width: 50%;
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }

    .input--style-4 {
        line-height: 50px;
        background: rgba(255, 255, 255, 0);
        ;
        -webkit-box-shadow: inset 0px 1px 3px 0px rgba(0, 0, 0, 0.08);
        -moz-box-shadow: inset 0px 1px 3px 0px rgba(0, 0, 0, 0.08);
        box-shadow: inset 0px 1px 3px 0px rgba(0, 0, 0, 0.08);
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        padding: 0px 20px;
        font-size: 16px;
        border-bottom-style: solid;
        border-bottom-width: thin;
        border-bottom-color: black;
        border-top-color: black;
        border-radius: 15px;
        color: #fff;
        -webkit-transition: all 0.4s ease;
        -o-transition: all 0.4s ease;
        -moz-transition: all 0.4s ease;
        transition: all 0.4s ease;
    }

    .label {
        font-size: 21px;
        color: #fff;
        text-transform: capitalize;
        display: block;
        margin-bottom: 5px;
    }

    /* ==========================================================================
   #RESET
   ========================================================================== */
    /**
 * A very simple reset that sits on top of Normalize.css.
 */
</style>

<body>
    <header id="header" class="d-flex align-items-center ">
        <div class="container-fluid d-flex align-items-center justify-content-lg-between">
            <a href="/" class="logo me-auto me-lg-0"><img src="assets/img/logo.jpg" alt=""
                    class="img-fluid"></a>
            <h1 class="logo me-auto me-lg-0"><a href="/">The Laali Project</a></h1>

            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <li><a class="nav-link scrollto" href="/admin/users">Users</a></li>
                    <li><a class="nav-link scrollto active" href="/admin/pendingAlumni">Alumni requests</a></li>
                    <li><a class="nav-link scrollto " href="/admin/mentee-mentor">M-M Fix</a></li>
                    <li><a class="nav-link scrollto " href="/admin/job_events">Opportunity Hub</a></li>
                    <li><a class="nav-link scrollto " href="/logout">Log Out</a></li>
                    </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

            <div class="header-social-links d-flex align-items-center">
                <a href="https://twitter.com/thelaaliproject?lang=en" class="twitter"><i class="bi bi-twitter"></i></a>
                <a href="https://www.facebook.com/thelaaliproject/" class="facebook"><i class="bi bi-facebook"></i></a>
                <a href="https://www.instagram.com/thelaaliproject/" class="instagram"><i
                        class="bi bi-instagram"></i></a>
                <a href="https://www.linkedin.com/company/the-laaliproject/?originalSubdomain=in" class="linkedin"><i
                        class="bi bi-linkedin"></i></i></a>
            </div>

        </div>
    </header>
    <!-- ======= Hero Section ======= -->

    <div class="container">
        <!-- show a dialog if user is not verified  -->




        <div class="accordion" style="padding-bottom:25px" id="accordionExample">
            <h1 style="font-weight:bold;">Alumni requests</h1>

            <input class="form-control" id="myInput" style="width:70%; margin-left:65px; padding-top:15px;" type="text" placeholder="Search..">
            <div id="myDIV">

                <div class="row">
                    <% for( var alumnis of data ) { %>
                    <div class="col-lg-6 mb-4">
                        <div class="card" id="1">
                            <div class="card-header" id="heading1">
                                <h2 class="mb-0">
                                    <button class="btn  collapsed" type="button" data-toggle="collapse" id="c"
                                        data-target="#collapse1" aria-expanded="false" style="color:#fff"
                                        aria-controls="collapse1">
                                        <%= alumnis.name %>
                                    </button>
                                </h2>
                            </div>
                            <div id="collapse1" class="collapse" aria-labelledby="heading1"
                                data-parent="#accordionExample">
                                <div class="card-body">
                                    <div>
                                        <label>Designation: <%= alumnis.workExo %></label>
                                        <label>Email: <%= alumnis.email %></label>
                                        <label>LinkedIn: <%= alumnis.linkedin %></label>
                                        <label>Organization: <%= alumnis.organization %></label>
                                        <label>Phone No: <%= alumnis.phone %></label>
                                        <label>Skill Sets: <%= alumnis.skilset %></label>
                                        <label>Awards and honours: <%= alumnis.awards_and_honours %></label>

                                    </div><br>
                                    <form action="/admin/verifyAlumni" method="POST">
                                        <input type="hidden" name="phone" value="<%= alumnis.phone %>">
                                    <!-- <div><button type="submit"><a class="btn btn-primary"
                                            style="background:linear-gradient(60deg, #288c6c, #4ea752)" id="nmm">Make
                                            alumni
                                        </a></button> </div> -->
                                        <button type="submit">Approve</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }  %> 



                </div>

            </div>




            <!-- background:linear-gradient(60deg, #288c6c, #4ea752) -->



        </div>


    </div>


    </div>
    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
            class="bi bi-arrow-up-short"></i></a>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
